<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ext="using:Avalonia.Extensions.Controls"
             xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
             xmlns:fluent="using:Avalonia.Themes.Fluent"
             xmlns:twitch="clr-namespace:RaffleApp.ViewModels.Twitch"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             MinHeight="200" MinWidth="100"
             HorizontalAlignment="Right" VerticalAlignment="Top"
             x:Class="RaffleApp.Views.TwitchControlView"
             x:DataType="twitch:TwitchManager">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <twitch:TwitchManager />
    </Design.DataContext>
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200">
        <!--- Bot Credentials Entry -->
        <Border BorderBrush="Blue" BorderThickness="2" Padding="2">
            <StackPanel Orientation="Vertical" Spacing="8" VerticalAlignment="Stretch">
                <!-- Bot Activation Switch -->
                <ToggleSwitch Name="BotSwitch" HorizontalAlignment="Center"
                              Click="SetBotIsOn">
                    <TextBlock Text="Twitch-Bot" FontSize="20" FontStyle="Italic"
                               HorizontalAlignment="Center">
                    </TextBlock>
                </ToggleSwitch>
                <!-- Bot Settings Foldout -->
                <Expander> <Expander.Header> Bot Settings </Expander.Header>
                        <Border BorderBrush="Khaki" BorderThickness="1" Padding="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" AllowAutoHide="True"
                                  VerticalScrollBarVisibility="Auto"
                                  BringIntoViewOnFocusChange="True" IsScrollInertiaEnabled="True">
                        <StackPanel Name="CredentialsPanel" IsEnabled="True">
                            <TextBlock Text="Username" HorizontalAlignment="Center"></TextBlock>
                            <TextBox Name="UsernameBox" IsReadOnly="False" Height="30" Width="200"
                                     AcceptsReturn="False"
                                     Text="{Binding CurrentTwitchSettings.Username}" TextAlignment="Left"
                                     TextWrapping="NoWrap" HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Left">
                            </TextBox>
                            <TextBlock Text="OAuth Token" HorizontalAlignment="Center"></TextBlock>
                            <TextBox Name="PasswordBox" IsReadOnly="False" Height="30" Width="200"
                                     AcceptsReturn="False"
                                     TextWrapping="NoWrap" HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Left"
                                     Text="{Binding CurrentTwitchSettings.Token}" TextAlignment="Left" PasswordChar="X">
                            </TextBox>
                            <TextBlock Text="Key Word" HorizontalAlignment="Center"></TextBlock>
                            <TextBox Name="KeywordBox" IsReadOnly="False" Height="30" Width="200" AcceptsReturn="False"
                                     TextWrapping="NoWrap" HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Left"
                                     Text="{Binding CurrentTwitchSettings.Keyword}" TextAlignment="Left">
                            </TextBox>
                            <TextBlock Text="Channel Name" HorizontalAlignment="Center"></TextBlock>
                            <TextBox Name="ChannelBox" IsReadOnly="False" Height="30" Width="200" AcceptsReturn="False"
                                     Text="{Binding CurrentTwitchSettings.ChannelName}" TextAlignment="Left"
                                     TextWrapping="NoWrap" HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Left">
                            </TextBox>
                        </StackPanel>
                    </ScrollViewer>
                            </Border>
                </Expander>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>